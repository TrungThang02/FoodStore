@using FoodStore.Models
@{
    ViewBag.Title = "ĐƠN ĐẶT HÀNG";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<h2 style="text-align:center">THÔNG TIN ĐƠN HÀNG</h2>
<table align="center" border="1" style="margin : 0 auto">
    <tr style="text-align:center; font-weight:bold;">
        <td>Tên Sách</td>
        <td>Ảnh Bìa</td>
        <td>Số Lượng</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold;">
            <td>@item.productName</td>
            <td><img src="~/Content/Image/@item.productImg" style="width:100px;"></td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { id = item.productId }))
            {
                <td align="center">@item.productQuantity</td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.productPrice)</td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.totalPrice)</td>
            }
        </tr>
    }

    <tr>
        <td colspan="3" style="text-align:right; color:red; font-weight:bold; padding-right:5px;">
            Số lượng sách: @string.Format("{0:#,##0}", @ViewBag.TongSoLuong)
        </td>
        <td colspan="3" style="text-align:center; color:red; font-weight:bold;">
            Tổng tiền: @string.Format("{0:#,##0,0}", @ViewBag.TongTien) VNĐ
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9">@Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "GioHang") </td>
    </tr>
</table>
<h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
@{ Customer kh = (Customer)Session["TaiKhoan"]; }

<table align="center" style="margin : 0 auto">
    @using (Html.BeginForm())
    {@Html.ValidationSummary(true)
    <tr style="height:40px;"><td>Họ tên khách hàng:</td><td style="font-weight:bold">@kh.CustomerName</td></tr>
    <tr style="height:40px;"><td>Địa chỉ:</td><td style="font-weight:bold">@kh.Address</td></tr>
    <tr style="height:40px;"><td>Điện thoại:</td><td style="font-weight:bold">@kh.Phone</td></tr>
    <tr style="height:40px;">
        <td>Ngày đặt:</td>
        <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
    </tr>
    <tr style="height:40px;">
        <td>Ngày giao:</td>
        <td style="font-weight:bold">
            <input type="date" name="NgayGiao" @ViewData["err"] />
        </td>
    </tr>
    <tr style="height:40px;">
        <td></td>
        <td>
            <button class="btn btn-primary"><a style="color : white" href="@Url.Action("PaymentWithPaypal","PayPal")">Thanh toán paypal</a></button>
            <button class="btn btn-primary"><a style="color : white" href="@Url.Action("MOMO","Payment")">Thanh toán momo</a></button>
            <button class="btn btn-primary"><a style="color : white" href="@Url.Action("Payment","Payment")">Thanh toán vnpay</a></button>
        </td>
    </tr>
}
</table>