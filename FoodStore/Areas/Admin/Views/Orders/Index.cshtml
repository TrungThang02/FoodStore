@model IEnumerable<FoodStore.Models.Orders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Quản lý đơn đặt hàng</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
