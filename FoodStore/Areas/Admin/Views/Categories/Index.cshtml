@model IEnumerable<FoodStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Quản lý danh mục món ăn</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr style="box-shadow: rgba(33, 35, 38, 0.1) 0px 10px 10px -10px; ">
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            <a href="~/Areas/Admin/Views/Categories/Index.cshtml">~/Areas/Admin/Views/Categories/Index.cshtml</a>
            @Html.DisplayNameFor(model => model.CategoryLink)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryLink)
            </td>
            <td>
                <a href="/Admin/Categories/Edit/@item.CategoryId"><i class="fa-solid fa-pen-to-square b"></i></a>
                <a href="/Admin/Categories/Details/@item.CategoryId"><i class="fa-solid fa-circle-info g"></i></a>
                <a href="/Admin/Categories/Delete/@item.CategoryId" class="Delete"><i class="fa-solid fa-trash r"></i></a>
            </td>
        </tr>
    }

</table>
